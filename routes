# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.PLAY_USERController.index()
#GET     /               controllers.Assets.at(path="/app/views", file=home.html)


# Routes API Rest
GET     /play_users                  controllers.PLAY_USERController.list(page: Integer ?= 1, size: Integer ?= 3)
GET     /users                       controllers.PLAY_USERController.allrest()
GET    /userlist                   controllers.PLAY_USERController.all()
GET     /play_users/$id<[0-9]+>      controllers.PLAY_USERController.get(id: Integer)
POST    /play_users                  controllers.PLAY_USERController.create()
POST    /users                  controllers.PLAY_USERController.create()
PUT     /play_user                  controllers.PLAY_USERController.update()
DELETE  /play_users/$id<[0-9]+>      controllers.PLAY_USERController.delete(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


